@model Hooli.Models.SoftwareModel

@{
    ViewBag.Title = "Index";
}

<h2>Add New Software</h2>

@using(Html.BeginForm("Save", "AddNewSoftware", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    <table>
        <tr>
            <td>
                <input type="file" name="Uploaded File" />
            </td>
        </tr>
        <tr>
            <td>
                <a href="~/Models/Test_SoftwareModel.cs">~/Models/Test_SoftwareModel.cs</a>
                <fieldset>
                    <ol>
                        <li>
                            @Html.LabelFor(m => m.name)
                            @Html.TextBoxFor(m => m.name)
                        </li>
                        <li>
                            @Html.LabelFor(m => m.version)
                            @Html.TextBoxFor(m => m.version)
                        </li>
                        <li>
                            @Html.LabelFor(m => m.description)
                            @Html.TextBoxFor(m => m.description)
                        </li>
                    </ol>
                </fieldset>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" name="Submit" value="Submit" />
            </td>
        </tr>
    </table>

}